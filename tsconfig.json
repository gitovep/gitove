{
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "types/*": ["src/types/*"]
    },

    "target": "ES2018",
    "module": "CommonJS",
    "lib": [
      "ES2018"
    ],

    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
  
    "plugins": [
      {
        "transform": "typia/lib/transform"
      }
    ]
  }
}